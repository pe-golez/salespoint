{% extends 'base.html.twig' %}

{% block title %}Hello InvoiceController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Invoice Number:
			{{ invoice.getInvoiceNumber() }}
			âœ…</h1>

		<ul>
			<li>Transaction Date:
				{{ invoice.getTransactionDate()|date('F d, Y') }}
			</li>
		</ul>

		<table>
			<thead>
				<tr>
					<th>Quantity</th>
					<th>Description</th>
					<th>Unit Price</th>
				</tr>
			</thead>
			<tbody>
				{% for invoiceDetail in invoice.getInvoiceDetails() %}
					<tr>
						<td>{{ invoiceDetail.getQuantity() }}</td>
						<td>{{ invoiceDetail.getItem().getDescription() }}</td>
						<td>{{ invoiceDetail.getItem().getUnitPrice() }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
