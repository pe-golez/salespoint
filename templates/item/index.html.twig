{% extends 'base.html.twig' %}

{% block title %}Hello ItemController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<table>
			<tr>
				<td>Item Number</td>
				<td>{{ item.getItemNumber() }}</td>
			</tr>
			<tr>
				<td>Description</td>
				<td>{{ item.getDescription() }}</td>
			</tr>
			<tr>
				<td>Unit Price</td>
				<td>PHP
					{{ item.getUnitPrice() }}</td>
			</tr>
		</table>
	</div>
{% endblock %}
