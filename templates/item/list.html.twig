{% extends 'base.html.twig' %}

{% block title %}Hello ItemController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<table style="border: solid black 1px;">
			<thead>
				<tr>
					<th style="border: solid black 1px;">Item Number</th>
					<th style="border: solid black 1px;">Description</th>
					<th style="border: solid black 1px;">Unit Price</th>
				</tr>
			</thead>
			<tbody>

				{% for item in items %}
					<tr>
						<td style="border: solid black 1px;">{{ item.getItemNumber() }}</td>
						<td style="border: solid black 1px;">{{ item.getDescription() }}</td>
						<td style="border: solid black 1px;">{{ item.getUnitPrice() }}</td>
					</tr>
				{% endfor %}


			</tbody>
		</table>
	</div>
{% endblock %}
